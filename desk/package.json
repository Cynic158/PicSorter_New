{
  "name": "PicSorter",
  "version": "2.1.0",
  "description": "sort your pictures better",
  "main": "dist/main.js",
  "author": "cynic",
  "license": "MIT",
  "scripts": {
    "build": "tsc && node copy.js",
    "start": "nodemon",
    "app:dist": "pnpm run build && electron-builder"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.1",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "image-size": "^1.2.0",
    "lodash": "^4.17.21",
    "portfinder": "^1.0.38",
    "sharp": "^0.33.5",
    "wrap-ansi": "7.0.0"
  },
  "build": {
    "files": [
      "dist/main.js",
      "dist/node_modules/**",
      "dist/ipcHandler/**",
      "dist/preload.js",
      "dist/utils/**"
    ],
    "directories": {
      "output": "deskdist"
    },
    "extraResources": [
      {
        "from": "dist/assets",
        "to": "assets"
      },
      {
        "from": "favicon.ico",
        "to": "favicon.ico"
      }
    ],
    "icon": "favicon.ico",
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
